{% extends "common/layout/base.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% set pageTitleName = 'pages.accountCreated.title' | translate %}
{% block content %}

{% include "common/errors/errorSummary.njk" %}

{{ govukPanel({
    titleText: 'pages.accountCreated.header' | translate
}) }}

<br>

<h1 class="govuk-heading-l govuk-!-margin-top-0 govuk-!-margin-bottom-3">{{'pages.accountCreated.subHeader' | translate}}</h1>

<p class="govuk-body">{{'pages.accountCreated.info.paragraph1' | translate}}</p>
<p class="govuk-body">{{'pages.accountCreated.info.paragraph2' | translate}}</p>
<p class="govuk-body">{{'pages.accountCreated.info.paragraph3' | translate}}</p>

{% if serviceType === 'MANDATORY' %}
    {{ govukInsetText({
      text: 'pages.accountCreated.inset' | translate + clientName + 'pages.accountCreated.insetContinued' | translate,
      classes: "govuk-bold"
    }) }}

    <p class="govuk-body">{{'pages.accountCreated.info.paragraph4' | translate}}</p>

    {{ govukButton({
        "text": button_text|default('pages.accountCreated.signOut' | translate, true),
        "href": logoutUrl
    }) }}

    <br>

    <a href="{{ linkUrl }}" class="govuk-link govuk-body">
        {{'pages.accountCreated.continueReport' | translate}}
    </a>
{% endif %}

{% if serviceType === 'OPTIONAL' %}
    <h1 class="govuk-body govuk-bold">{{'pages.accountCreated.progressSaved' | translate}}</h1>

    {{ govukButton({
        "text": button_text|default('pages.accountCreated.continue' | translate, true),
        "href": linkUrl
    }) }}

    <br>

    <a href="{{ logoutUrl }}" class="govuk-link govuk-body">
        {{'pages.accountCreated.signOut' | translate}}
    </a>
{% endif %}

{% endblock %}