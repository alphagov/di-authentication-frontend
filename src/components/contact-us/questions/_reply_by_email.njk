{{ govukWarningText({
    text:'pages.contactUsQuestions.personalInformation.paragraph1' | translate,
    iconFallbackText: "Warning"
}) }}

{% set emailHtml %}
{{ govukInput({
  id: "email",
  name: "email",
  value: email,
  type: "email",
  autocomplete: "email",
  spellcheck: false,
  classes: "govuk-!-width-one-third",
  label: {
    text: 'pages.contactUsQuestions.emailReply.emailLabel' | translate
  },
  hint: {
      text: 'pages.contactUsQuestions.emailReply.emailHint' | translate
  },
  errorMessage: {
      text: errors['email'].text
  } if (errors['email'])
}) }}
{{ govukInput({
  id: "name",
  name: "name",
  value: name,
  spellcheck: false,
  classes: "govuk-!-width-one-third",
  label: {
    text: 'pages.contactUsQuestions.emailReply.nameLabel' | translate
  },
  hint: {
      text: 'pages.contactUsQuestions.emailReply.nameHint' | translate
  }
}) }}
{% endset -%}

{{ govukRadios({
  idPrefix: "contact",
  name: "contact",
  fieldset: {
    legend: {
      text: 'pages.contactUsQuestions.emailReply.header' | translate,
      isPageHeading: true,
      classes: "govuk-fieldset__legend--l"
    }
  },
  items: [
    {
      value: "true",
      text: 'general.yes' | translate,
      checked: contact === 'true',
      conditional: {
        html: emailHtml
      }
    },
    {
      value: "false",
      text: 'general.no' | translate,
      checked: contact === 'false'
    }
    ],
      errorMessage: {
          text: errors['contact'].text
      } if (errors['contact'])
}) }}