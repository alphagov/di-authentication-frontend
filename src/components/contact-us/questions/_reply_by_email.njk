{% set emailHtml %}
{{ govukInput({
  id: "replyEmail",
  name: "replyEmail",
  value: replyEmail,
  type: "email",
  autocomplete: "email",
  spellcheck: false,
  classes: "govuk-!-width-one-third",
  label: {
    text: 'pages.contactUsQuestions.emailReply.label' | translate
  },
  hint: {
      text: 'pages.contactUsQuestions.emailReply.hint' | translate
  },
  errorMessage: {
      text: errors['replyEmail'].text
  } if (errors['replyEmail'])
}) }}
{% endset -%}

{{ govukRadios({
  idPrefix: "contact",
  name: "contact",
  fieldset: {
    legend: {
      text: 'pages.contactUsQuestions.emailReply.header' | translate,
      isPageHeading: true,
      classes: "govuk-fieldset__legend--l"
    }
  },
  items: [
    {
      value: "true",
      text: 'general.yes' | translate,
      checked: contact === 'true',
      conditional: {
        html: emailHtml
      }
    },
    {
      value: "false",
      text: 'general.no' | translate,
      checked: contact === 'false'
    }
    ],
      errorMessage: {
          text: errors['contact'].text
      } if (errors['contact'])
}) }}