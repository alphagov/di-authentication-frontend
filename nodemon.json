{
  "watch": ["src/**/*", "views/**/*", "locales/**/*"],
  "ext": "ts,js,json,html,css,scss",
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "restart": "cp -R src/views dist/ && cp -R locales dist/"
  }
}
