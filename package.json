{
  "name": "di-auth",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "16.8.0"
  },
  "scripts": {
    "build-ts": "tsc",
    "build": "yarn build-sass && yarn build-ts && yarn minfiy-build-js && yarn copy-assets",
    "build-sass": "rm -rf dist/public/style.css && sass --no-source-map src/assets/scss/application.scss dist/public/style.css --style compressed",
    "clean": "rm -rf dist node_modules logs.json",
    "copy-assets": "mkdir -p dist && copyfiles -u 1 src/**/*.njk dist/ src/locales/**/** dist/ && copyfiles -a static/* && copyfiles -u 3 src/assets/javascript/*.js dist/public/scripts",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "dummy-server": "node dev-app.js",
    "depcheck": "depcheck",
    "lint": "eslint . --ext .ts,.js",
    "minfiy-build-js": "uglifyjs src/assets/javascript/application.js -o src/assets/javascript/application.js -c -m && uglifyjs src/assets/javascript/cookies.js -o src/assets/javascript/cookies.js -c -m",
    "pretty": "prettier --write \"src/**/*.{ts,json}\"",
    "start": "node dist/server.js",
    "test:audit": "yarn audit",
    "test:integration": "rm -rf test/coverage && NODE_ENV=development nyc mocha -r dotenv/config  \"src/**/*-integration.test.ts\"",
    "test:unit": "rm -rf test/coverage && NODE_ENV=development nyc mocha --exclude \"src/**/*-integration.test.ts\"  \"test/unit/**/*.test.ts\" --recursive \"src/**/*.test.ts\"",
    "test": "rm -rf test/coverage && NODE_ENV=development nyc mocha -r dotenv/config  \"test/unit/**/*.test.ts\" --recursive \"src/**/*.test.ts\"",
    "test:coverage": "nyc report",
    "watch-node": "nodemon -r dotenv/config --inspect=0.0.0.0:9230 dist/server.js | pino-pretty",
    "watch-ts": "tsc -w",
    "watch-sass": "sass --watch src/assets/scss/application.scss dist/public/style.css"
  },
  "mocha": {
    "diff": true,
    "extension": ["js","ts"],
    "timeout": 20000,
    "recursive": true,
    "require": ["ts-node/register"],
    "exit": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true
  },
  "dependencies": {
    "axios": "^0.21.2",
    "cfenv": "^1.2.4",
    "csurf": "^1.11.0",
    "connect-redis": "^6.0.0",
    "cookie-parser": "^1.4.5",
    "dompurify": "^2.3.3",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "express-validator": "^6.13.0",
    "govuk-frontend": "^3.13.1",
    "helmet": "4.6.0",
    "i18next": "^21.2.4",
    "i18next-fs-backend": "^1.1.1",
    "i18next-http-middleware": "^3.1.4",
    "jsdom": "^18.0.0",
    "node-zendesk": "^2.1.0",
    "nunjucks": "^3.2.3",
    "libphonenumber-js": "^1.9.34",
    "prettier": "^2.4.1",
    "pino": "^6.13.2",
    "pino-http": "^5.7.0",
    "redis": "^3.1.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/cfenv": "^1.2.1",
    "@types/cheerio": "^0.22.30",
    "@types/cookie-parser": "^1.4.2",
    "@types/connect-redis": "0.0.17",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/i18next-fs-backend": "^1.1.1",
    "@types/node": "^16.7.13",
    "@types/node-zendesk": "^2.0.3",
    "@types/nunjucks": "^3.1.5",
    "@types/mocha": "^9.0.0",
    "@types/pino": "^6.3.11",
    "@types/pino-http": "^5.7.0",
    "@types/pino-pretty": "^4.7.1",
    "@types/redis": "^2.8.31",
    "@types/sinon": "^10.0.4",
    "@types/sinon-chai": "^3.2.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "cheerio": "^1.0.0-rc.10",
    "copyfiles": "^2.4.1",
    "concurrently": "^6.2.0",
    "decache": "^4.6.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.1",
    "mocha": "^9.1.3",
    "nock":"^13.1.3",
    "nodemon": "^2.0.12",
    "nyc": "^15.1.0",
    "pino-pretty": "^7.0.1",
    "sass": "^1.42.1",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.1.5",
    "ts-node": "^10.3.1",
    "typescript": "^4.4.3",
    "uglify-js": "^3.14.1"
  }
}
