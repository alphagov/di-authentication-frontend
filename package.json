{
  "name": "di-auth",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": "15.14.0"
  },
  "author": "",
  "license": "ISC",
  "scripts": {
    "build-ts": "tsc",
    "build": "yarn run build-sass && yarn run build-ts && yarn run copy-build",
    "build-sass": "rm -rf dist/public/style.css && sass --no-source-map src/assets/scss/application.scss dist/public/style.css",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test:audit": "npm audit",
    "test:vulnerabilities": "if npm audit | grep -E -B9999 '\\d+\\s+(high|critical)'; then npm audit; else exit 0; fi",
    "fix:vulnerabilities": "npm audit fix --update-binary",
    "copy-build": "mkdir -p dist && copyfiles -u 1 src/**/*.njk dist/ && copyfiles -a static/* locales/**/** dist/",
    "start": "yarn run serve",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "watch-sass": "sass --watch src/assets/scss/application.scss dist/public/style.css",
    "depcheck": "depcheck",
    "lint": "eslint . --ext .ts,.js",
    "test": "yarn test:unit",
    "test:unit": "rm -rf tests/coverage && NODE_ENV=development nyc mocha --timeout 10000 --exit --recursive --require ts-node/register \"tests/unit/**/*.test.ts\" --recursive \"src/**/*.test.ts\"",
    "test:coverage": "nyc report",
    "clean": "rm -rf dist node_modules",
    "pretty": "prettier --write \"src/**/*.{ts,json}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cookie-session": "^1.4.0",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "dompurify": "^2.2.9",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "express-pino-logger": "^6.0.0",
    "govuk-frontend": "^3.12.0",
    "helmet": "4.6.0",
    "i18next": "^20.3.1",
    "i18next-fs-backend": "^1.1.1",
    "i18next-http-middleware": "^3.1.3",
    "jsdom": "^16.6.0",
    "nunjucks": "^3.2.3",
    "prettier": "^2.3.1",
    "pino": "^6.11.3",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/chai-as-promised": "^7.1.4",
    "@types/cookie-session": "^2.0.42",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.11.1",
    "@types/express": "^4.17.12",
    "@types/i18next-fs-backend": "^1.0.0",
    "@types/node": "^15.12.1",
    "@types/nunjucks": "^3.1.4",
    "@types/mocha": "^8.2.2",
    "@types/pino": "^6.3.8",
    "@types/pino-http": "^5.4.1",
    "@types/pino-pretty": "^4.7.0",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "copyfiles": "^2.4.1",
    "concurrently": "^6.2.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "pino-pretty": "^5.0.2",
    "sass": "^1.34.1",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.1.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
