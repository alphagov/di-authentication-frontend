{
  "name": "di-auth",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": "15.14.0"
  },
  "author": "",
  "license": "ISC",
  "scripts": {
    "build-ts": "tsc",
    "build": "yarn run build-sass && yarn run build-ts && yarn run copy-build",
    "build-sass": "rm -rf dist/public/style.css && sass --no-source-map src/assets/scss/application.scss dist/public/style.css",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "copy-locales": "cp -R locales dist/",
    "copy-static-files": "cp -R static dist/",
    "copy-views": "cp -R src/views dist/",
    "copy-build": "mkdir dist && yarn run copy-locales && yarn run copy-static-files && yarn copy-views",
    "start": "yarn run serve",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "watch-sass": "sass --watch src/assets/scss/application.scss dist/public/style.css",
    "depcheck": "depcheck",
    "lint": "eslint . --ext .ts,.js",
    "test": "yarn test:unit",
    "test:unit": "rm -rf tests/coverage && NODE_ENV=test nyc mocha --exit --recursive \"tests/unit/**/*.test.ts\"",
    "test:coverage": "nyc report",
    "clean": "rm -rf dist node_modules"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "dompurify": "^2.2.9",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "govuk-frontend": "^3.12.0",
    "helmet": "4.6.0",
    "i18next": "^20.3.1",
    "i18next-fs-backend": "^1.1.1",
    "i18next-http-middleware": "^3.1.3",
    "jsdom": "^16.6.0",
    "nunjucks": "^3.2.3",
    "prettier": "^2.3.1",
    "winston": "^3.3.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/csurf": "^1.11.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.12",
    "@types/i18next-fs-backend": "^1.0.0",
    "@types/node": "^15.12.1",
    "@types/nunjucks": "^3.1.4",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "chai": "^4.3.4",
    "concurrently": "^6.2.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "nyc": "^15.1.0",
    "nodemon": "^2.0.7",
    "mocha": "^8.4.0",
    "sass": "^1.34.1",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
